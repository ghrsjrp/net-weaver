FROM node:20-alpine AS builder

WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .

# Definir vari√°veis para ambiente self-hosted
# VITE_API_URL vazio = usar URLs relativas (funciona com proxy nginx)
ENV VITE_API_URL=""
ENV VITE_SELF_HOSTED=true

RUN npm run build

FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
